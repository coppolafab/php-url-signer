<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="VIPR" xsi:noNamespaceSchemaLocation="phpcs.xsd">

    <file>src</file>
    <file>tests</file>

    <arg name="basepath" value="." />
    <arg name="colors" />
    <arg name="error-severity" value="1" />
    <arg name="extensions" value="php" />
    <arg name="ignore-annotations" />
    <arg name="parallel" value="8" />
    <arg name="warning-severity" value="0" />
    <arg value="q" />

    <ini name="memory_limit" value="16M" />

    <rule ref="PSR12" />

</ruleset>

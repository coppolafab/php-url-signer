{
    "name": "coppolafab/php-url-signer",
    "description": "Create signed URLs with an expiring date",
    "license": "ISC",
    "keywords": [
        "signed",
        "url",
        "link",
        "expire"
    ],
    "authors": [
        {
            "name": "Fabio Coppola",
            "homepage": "https://github.com/coppolafab",
            "role": "Developer"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": "~7.4 || ~8.0.0"
    },
    "autoload": {
        "psr-4": {
            "coppolafab\\UrlSigner\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "ext-phar": "*",
        "phpunit/phpunit": "^9.5.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.64",
        "vimeo/psalm": "^4.3",
        "infection/infection": "^0.20.2"
    },
    "conflict": {
        "thecodingmachine/safe": "<1.1.3"
    }
}
